# Database
MONGO_URI=mongodb://localhost:27017/meeting-summarizer

# Server
PORT=4000

# Free/Alternative Services (No OpenAI API required)
# Choose one of these options:

# Option 1: Google Speech-to-Text (Free tier: 60 minutes/month)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Option 2: Hugging Face (Free tier available)
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Option 3: Mock/Demo Mode (No external APIs)
USE_MOCK_SERVICES=true

# Redis (for job queue) - You can use a free Redis instance
REDIS_URL=redis://localhost:6379

# File upload settings
MAX_FILE_SIZE=50000000
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp3,audio/wav,audio/m4a,audio/ogg
